<settings>
  <!--General settings-->
  <setting name="emulatedController" value="index"/> <!--"vive" or "index"-->
  <setting name="rightHand" value="true"/>
  <setting name="leftHand" value="true"/>
  <setting name="orientation" value="hmd"/> <!--"hmd" or "desktop"-->
  <setting name="skeleton" value="true"/> <!--Only Index controller-->
  <setting name="trackingLevel" value="partial"/> <!--"partial" or "full", only Index controller-->
  <!--Offsets settings-->
  <setting name="desktopOffset" value="0.0 -0.5 -0.5"/> <!--Global offset in desktop orientation, XYZ-->
  <setting name="leftHandOffset" value="0.0 0.0 -0.15"/> <!--Local offset, XYZ-->
  <setting name="leftHandOffsetRotation" value="0.0 0.0 0.0 1.0"/> <!--Local offset, XYZW-->
  <setting name="rightHandOffset" value="0.0 0.0 -0.15"/> <!--Local offset, XYZ-->
  <setting name="rightHandOffsetRotation" value="0.0 0.0 0.0 1.0"/> <!--Local offset, XYZW-->
  <!--Input settings-->
  <setting name="input" value="true"/> <!--All input-->
  <setting name="menu" value="true"/>
  <setting name="appMenu" value="true"/> <!--Only Vive controller-->
  <setting name="trigger" value="true"/>
  <setting name="grip" value="true"/>
  <setting name="touchpad" value="true"/>
  <setting name="touchpadTouch" value="true"/>
  <setting name="touchpadPress" value="true"/>
  <setting name="touchpadAxes" value="true"/>
  <setting name="buttonA" value="true"/> <!--Only Index controller-->
  <setting name="buttonB" value="true"/> <!--Only Index controller-->
  <setting name="thumbstick" value = "true"/> <!--Only Index controller-->
  <!--Arbitrary settings-->
  <setting name="handsReset" value="false"/> <!--Mark controllers as out of range if hands aren't detected-->
</settings>